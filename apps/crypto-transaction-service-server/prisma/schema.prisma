datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt        DateTime          @default(now())
  dAppInteractions DAppInteraction[]
  email            String?
  id               String            @id @default(cuid())
  isVerified       Boolean?
  password         String?
  updatedAt        DateTime          @updatedAt
  username         String?
  wallets          Wallet[]
}

model Wallet {
  address   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Transaction {
  amount     Float?
  createdAt  DateTime  @default(now())
  fromWallet String?
  id         String    @id @default(cuid())
  status     String?
  timestamp  DateTime?
  toWallet   String?
  updatedAt  DateTime  @updatedAt
}

model DAppInteraction {
  action    String?
  createdAt DateTime  @default(now())
  details   String?
  id        String    @id @default(cuid())
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}
